<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pink_100"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:maxLines="1"
        android:text="Upload Day 3 images"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/titleTV">

        <TextView
            android:id="@+id/image1IV"
            android:layout_width="0dp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/rounded_corner_background_pink_200"
            android:text="tap to upload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.48" />


        <TextView
            android:id="@+id/image2IV"
            android:layout_width="0dp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/rounded_corner_background_pink_200"
            android:text="tap to upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.48"
            app:riv_corner_radius="@dimen/_12sdp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/uploadBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="Upload now"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="true"
        android:background="@drawable/rounded_background_blue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"/>
</LinearLayout>