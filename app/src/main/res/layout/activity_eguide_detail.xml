<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_200">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/guideIV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_eguieds_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/backIV"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/back_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/play_icon"
                app:layout_constraintBottom_toBottomOf="@id/guideIV"
                app:layout_constraintEnd_toEndOf="@id/guideIV"
                app:layout_constraintStart_toStartOf="@id/guideIV"
                app:layout_constraintTop_toTopOf="@id/guideIV" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/guideIV">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/typeTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:text="Hand Surgery"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/descriptionTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="3"
                    android:text="Lorem ipsum dolor sit amet, cons is ecteturs dipiscing elit, sed to do eiusmod tempor of ncididunt ut laore et it is very dolore magna aliqua."
                    android:textAlignment="textStart"
                    android:textColor="@color/gray_100"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/typeTV" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/nutritionListTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:text="Nutrition List"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descriptionTV" />

                <LinearLayout
                    android:id="@+id/download1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toTopOf="@id/nutritionListTV"
                    app:layout_constraintBottom_toBottomOf="@id/nutritionListTV">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="Download"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_10ssp" />


                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/pdf_icon" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/nutritionListListLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/nutritionListTV">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Brightly colored fruits"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Vegetables"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Water"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Berries"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Fats (nuts, oils, fish)"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Meat or Other Alternatives"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Eggs"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Probiotics"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/bestPracticesTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:text="Best Practices"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nutritionListListLL" />
                <LinearLayout
                    android:id="@+id/download2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toTopOf="@id/bestPracticesTV"
                    app:layout_constraintBottom_toBottomOf="@id/bestPracticesTV">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="Download"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/_10ssp" />


                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/pdf_icon" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bestPracticesLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/bestPracticesTV">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Tight Fist Exercise"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Finger Bend Exercise"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Finger to Finger Exercise"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Thumb Bend Exercise"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_100"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>