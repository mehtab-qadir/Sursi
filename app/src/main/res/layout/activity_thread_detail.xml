<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_200">

    <ImageView
        android:id="@+id/threadIV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_thread_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/threadIV">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/typeTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:text="Dr. Christine Michel"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:text="Wed,February 11,2021"
            android:textAlignment="textStart"
            android:textColor="@color/gray_200"
            android:textSize="@dimen/_14ssp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/typeTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/descriptionTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="3"
            android:text="Lorem ipsum dolor sit amet, cons is ecteturs dipiscing elit, sed to do eiusmod tempor of ncididunt ut laore et it is very dolore magna aliqua."
            android:textAlignment="textStart"
            android:textColor="@color/gray_100"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateTV" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversationRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/sendMessageCL"
        app:layout_constraintTop_toBottomOf="@id/mainLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sendMessageCL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
       android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/messageET"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/rounded_corner_background_white"
            android:hint="Write message"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_40sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/gallery_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/gallery_icon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_1sdp"
            android:src="@drawable/gallery_icon"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/sendIV"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/sent_icon"
            app:layout_constraintBottom_toBottomOf="@id/messageET"
            app:layout_constraintEnd_toEndOf="@id/messageET"
            app:layout_constraintTop_toTopOf="@id/messageET" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>