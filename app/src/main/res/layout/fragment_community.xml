<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_200">
    <include
        android:id="@+id/appBarView"
        layout="@layout/app_bar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarView"
        app:layout_constraintBottom_toBottomOf="parent">



    <View
        android:id="@+id/tabView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/rounded_corner_background_pink_100"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inboxBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Inbox"
        android:textColor="@color/blue"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@id/tabView"
        app:layout_constraintEnd_toStartOf="@+id/threadBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tabView"
        app:layout_constraintWidth_percent="0.45" />

    <View
        android:id="@+id/inboxLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="@id/inboxBtn"
        app:layout_constraintStart_toStartOf="@id/inboxBtn"
        app:layout_constraintTop_toBottomOf="@id/inboxBtn"
        app:layout_constraintWidth_percent="0.3" />

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tabView"
            app:layout_constraintEnd_toStartOf="@id/threadBtn"
            app:layout_constraintStart_toEndOf="@id/inboxBtn"
            app:layout_constraintTop_toTopOf="@id/tabView" />

    <TextView
        android:id="@+id/threadBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Thread"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@id/tabView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/inboxBtn"
        app:layout_constraintTop_toTopOf="@id/tabView"
        app:layout_constraintWidth_percent="0.45" />
    <View
        android:visibility="invisible"
        android:id="@+id/threadLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="@id/threadBtn"
        app:layout_constraintStart_toStartOf="@id/threadBtn"
        app:layout_constraintTop_toBottomOf="@id/threadBtn"
        app:layout_constraintWidth_percent="0.3" />


        <EditText
            android:id="@+id/searchET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/rounded_corner_background_pink_2"
            android:drawableEnd="@drawable/ic_search"
            android:hint="@string/search_threads"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/gray_200"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColorHint="@color/gray_200"
            app:layout_constraintTop_toBottomOf="@+id/tabView"
            tools:layout_editor_absoluteX="26dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainRV"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchET"
            tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/createThreadBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="create thread"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="true"
        android:background="@drawable/rounded_background_blue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>